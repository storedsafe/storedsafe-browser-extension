{
  "name": "storedsafe-browser-extension",
  "version": "0.5.0",
  "description": "StoredSafe browser extension for chrome and firefox",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "build": "webpack --mode production",
    "zip": "node ./plugins/zip -i build/dist/chrome/ -o dist/chrome.zip && node ./plugins/zip -i build/dist/firefox/ -o dist/firefox.zip",
    "dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "storybook": "start-storybook",
    "build-storybook": "build-storybook"
  },
  "author": "Oscar Mattsson",
  "license": "AGPL-3.0-or-later",
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-void": [
        "error",
        {
          "allowAsStatement": true
        }
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "standard-with-typescript",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addon-storyshots": "^5.3.18",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^5.3.18",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.3",
    "@types/firefox-webext-browser": "^70.0.1",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.11.0",
    "@types/pretty": "^2.0.0",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@types/react-test-renderer": "^16.9.2",
    "@types/resize-observer-browser": "^0.1.3",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "archiver": "^5.0.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.2",
    "eslint": "^7.3.1",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^6.0.0",
    "fs-extra": "^9.0.0",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^25.3.0",
    "lodash.merge": "^4.6.2",
    "msw": "^0.19.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "pretty": "^2.0.0",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-test-renderer": "^16.13.1",
    "regenerator-runtime": "^0.13.5",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "schema-utils": "1.0.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.9.5",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "yargs": "^15.4.1"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "storedsafe": "git+ssh://git@git.xpd.se:19922/storedsafe/storedsafe-javascript.git",
    "webextension-polyfill": "^0.6.0"
  }
}
