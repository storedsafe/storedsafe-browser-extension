    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.41.0",
    "svelte-check": "^1.6.0",
    "svelte-jester": "^1.7.0",
    "svelte-preprocess": "^4.7.4",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5",
    "web-ext": "^6.6.0"
  },
  "dependencies": {
