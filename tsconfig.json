{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "buildtools/**/*.ts"],
  "exclude": ["node_modules"],
}
