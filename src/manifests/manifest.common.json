{
  "manifest_version": 2,
  "name": "StoredSafe",

  "description": "Password StoredSafe browser extension",
  "icons": {
    "64": "icon.png"
  },

  "browser_action": {
    "default_popup": "index.html#popup"
  },

  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": [
        "lib/browser-polyfill.js",
        "content_script.bundle.js"
      ]
    }
  ],

  "background": {
    "scripts": [
      "lib/browser-polyfill.js",
      "background.bundle.js"
    ],
    "persistent": false
  },

  "permissions": [
    "contextMenus",
    "storage",
    "idle",
    "https://*/*"
  ]
}
